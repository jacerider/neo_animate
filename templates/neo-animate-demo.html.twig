<div class="card p-6">
  <div class="h-screen flex items-center justify-center">
    <div class="text-center">
      <h2 class="uppercase text-sm font-bold">Scroll Down</h2>
      <div class="mt-3 animate-bounce">{{ icon('angle-down') }}</div>
    </div>
  </div>
