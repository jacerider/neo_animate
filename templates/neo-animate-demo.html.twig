    <div class="flex flex-col gap-32 py-32">
      <div class="self-end">
        {% set attributes = create_attribute()|neo_animate_attribute('fade', {duration: 1500}) %}
        <div{{ attributes.addClass('card border-8 bg-base text-base-content px-6 py-12') }}>
          <pre>{{ "neo_animate_attribute('fade', {duration: 1500})"|raw }}</pre>
        </div>
      </div>
      <div class="self-start">
        {% set attributes = create_attribute()|neo_animate_attribute('fade-up', {mirror: true}) %}
